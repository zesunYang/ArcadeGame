import java.awt.Dimension;
import java.awt.Graphics;

import javax.swing.JPanel;

/**
 * TODO Put here a description of what this class does.
 *
 * @author localmgr. Created Feb 17, 2015.
 */
public class ScorePanel extends JPanel {
	private int score;
	private int lives;
	private static final Dimension SCORE_SIZE = new Dimension(100, 40);

	/**
	 * TODO Put here a description of what this constructor does.
	 *
	 */
	public ScorePanel() {
		super();
		this.score = 0;
		this.lives = 3;
		super.setPreferredSize(SCORE_SIZE);
	}

	public void paintComponent(Graphics g) {
		g.drawString("Score: " + this.score, 25, 25);
		g.drawString("Lives left: " + this.lives, 75, 25);
	}

	public void addScore(int score) {
		this.score += score;
		this.repaint();
	}

	public void resetScore() {
		this.score = 0;
		this.repaint();
	}

	public void updateLives() {
		this.lives -= 1;
		System.out.println(this.lives);
		this.repaint();
	}

	public void resetLives() {
		this.lives = 3;
		this.repaint();
	}
}
